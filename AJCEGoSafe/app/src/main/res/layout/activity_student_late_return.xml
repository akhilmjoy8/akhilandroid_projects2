<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.ajcegosafe.StudentLateReturn">

    <Button
        android:id="@+id/btnLateSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="143dp"
        android:layout_y="314dp"
        android:background="@color/colorPrimaryDark"
        android:text="Submit"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/txtLateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="28dp"
        android:layout_y="18dp"
        android:text="Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtLateAdno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="18dp"
        android:text="Admno"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_x="4dp"
        android:layout_y="84dp"
        android:background="@android:color/holo_green_dark" />

    <RadioGroup
        android:id="@+id/radioPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="67dp"
        android:layout_y="118dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_x="120dp"
            android:layout_y="196dp"
            android:text="Have Permission"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_x="206dp"
            android:layout_y="196dp"
            android:text="Don't have Permission"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </RadioGroup>
</AbsoluteLayout>
