<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarDefaultDelayBeforeFade="@android:integer/config_mediumAnimTime"
    android:scrollbarSize="@dimen/activity_horizontal_margin"
    android:scrollbars="horizontal"
    tools:context="com.example.hp.ajcegosafe.StudentRegistration">
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="42dp"
        android:ems="10"
        android:hint="Admission No."
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="94dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:digits="qwertzuiopasdfghjklyxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="142dp"
        android:ems="10"
        android:hint="DOB"
        android:maxLength="10"
        android:digits="0123456789-"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_x="245dp"
        android:layout_y="138dp"
        app:srcCompat="@drawable/cul" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="99dp"
        android:layout_height="44dp"
        android:layout_x="21dp"
        android:layout_y="192dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:text="Gender"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_x="129dp"
        android:layout_y="196dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_x="120dp"
            android:layout_y="196dp"
            android:text="Male"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_x="206dp"
            android:layout_y="196dp"
            android:text="Female "
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="18sp" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spinner4"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_x="5dp"
        android:layout_y="240dp" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:layout_width="78dp"
        android:layout_height="42dp"
        android:layout_x="245dp"
        android:layout_y="240dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="290dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="340dp"
        android:ems="10"
        android:hint="Parent Mobile No."
        android:inputType="number"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="349dp"
        android:layout_height="61dp"
        android:layout_x="5dp"
        android:layout_y="431dp"
        android:background="@android:color/holo_green_dark"
        android:text="Save"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="247dp"
        android:layout_y="308dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="251dp"
        android:layout_y="340dp"
        android:visibility="invisible" />

</AbsoluteLayout>
    </ScrollView>
