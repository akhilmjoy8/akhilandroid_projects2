<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    class="com.google.android.gms.maps.MapFragment">
    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <LinearLayout
        android:id="@+id/debug_panel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:background="#99000000"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="accrcy:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/sigcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="sigCnt:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/noisecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="noiseCnt:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/logcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="logCnt:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/nsratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="nsRatio:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/latest_nsratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="nsRatio#:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="Rule:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/logtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="logTime"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="sysTime:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="startTime:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/paused_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="paused for:"

            android:textSize="14sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/pred_delta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:includeFontPadding="true"
            android:text="predDelta:"

            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"

        >

        <ImageButton
            android:id="@+id/stop_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/user_position_point"
            android:scaleType="fitCenter" />


        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inaccurate_location_marker"
            android:scaleType="fitCenter" />


    </FrameLayout>
</FrameLayout>